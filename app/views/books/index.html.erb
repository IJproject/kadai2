<div class="container">
  <div class="flash-message flash-margin">
    <%= flash[:notice] %>
  </div>
  <h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", "/books/#{book.id}" %>
        <%= link_to "Edit", "/books/#{book.id}/edit" %>
        <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
    <% end %>
  </table>

  <h2>New book</h2>
  <% if @book.errors.any? %>
    <div class="border-red">
      <div class="back-red">
        <%= @book.errors.count %>
        error prohibited this book from being saved:
      </div>
　    <ul class="error">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <p class="new">Title</p>
    <%= f.text_field :title %>
    
    <p class="new">Body</p>
    <%= f.text_area :body %>
    
    <div class="new-submit">
      <%= f.submit 'Create Book'%>
    </div>
  <% end %>
</div>

