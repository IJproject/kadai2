<div class="container">
  <h1 class="edit">Editing Book</h1>
  <% if @book.errors.any? %>
    <div class="border-red">
      <div class="back-red">
        <%= @book.errors.count %>
        error prohibited this book from being saved:
      </div>
ã€€    <ul class="error">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @book, url: "/books/#{@book.id}", method: :patch do |f| %>
    <div class="edit-item">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="edit-item">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="edit-item">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  <div class="edit-link">
    <%= link_to "Show", "/books/#{@book.id}" %>
    |
    <%= link_to "Back", "/books" %>
  </div>

</div>
